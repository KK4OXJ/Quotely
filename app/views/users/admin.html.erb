<div class="container">
  <input type="text" placeholder="<%= current_user.name %>" id="search-users" class="search-users" autofocus>
  <div class="users-container">
    <% @users.each do |user| %>
      <div class="user">
        <span class="user-data"><small class="user-id"><%= user.id %></small> - <span class="user-name"><%= link_to user.name, user_url(user) %></span> <small class="user-email">(<%= link_to user.email, "mailto:#{ user.email }" %>)</small></span>
        <span class="user-controls"><%= link_to "Edit", edit_user_url(user) %> | <%= link_to "Delete", user_url(user), method: :delete, data: {confirm: "Are you absolutely sure you want to delete this user?"} %> | <%= link_to "Make Admin", user_url(user) %></span>
      </div>
    <% end %>
  </div>
</div>