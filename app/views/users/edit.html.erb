<div class="form-container">
  <%= form_for(@user) do |f| %>
    <%= f.label "Email:", :for => 'email' %>
    <br>
    <%= f.email_field :email, :id => 'email', :autofocus => 'true' %> 
    <br><br>
    <%= f.label "Name:", :for => 'name' %>
    <br>
    <%= f.text_field :name, :id => 'name' %>
    <br>
    <%= f.submit "Submit", :class => 'btn' %> 
  <% end %>
</div>

<%= link_to 'Delete account', user_url(@user), method: :delete, data: { confirm: "Are you sure you want to delete your account? You can't undo this." }, :class => 'btn warning delete-account' %>